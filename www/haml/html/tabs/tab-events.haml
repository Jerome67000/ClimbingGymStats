%ion-view(view-title="Climbing Gym Stats" ng-controller="eventsCtrl")
  %ion-nav-buttons(side="right")
    %button.button.button-icon.button-clear.ion-android-settings(ng-click="openConfigPopup()")
  %ion-content.padding
    %ion-refresher(on-refresh= "doRefresh()" pulling-text="Pull to refresh...")
    %ion-list
      %ion-item.item-thumbnail-left(ng-repeat="event in events")
        %img(ng-src="{{event.picture}}")
        %h2 {{event.title}}
        %p {{event.description}}
        %p {{event.date}}

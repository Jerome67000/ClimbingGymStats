%ion-view(view-title="Climbing Gym Stats" ng-controller="sessionsCtrl")
  %ion-nav-buttons(side="right")
    %button.button.button-icon.button-clear.ion-android-settings(ng-click="openConfigPopup()")
  %ion-content.padding.sessions
    .list
      %a.item.item-icon-left(ng-repeat="session in sessions" ui-sref="tab.session-detail({ session_id: session.$id})")
        %i.icon.ion-android-checkbox-blank
        {{session.title}}
        %span.item-note {{session.created_at}}

  .bar.bar-footer
    %button.button.button-icon.icon.ion-plus-circled.pull-right.fap-button(ng-click="showNewSessionPopup()")
